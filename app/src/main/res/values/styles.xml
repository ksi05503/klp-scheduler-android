<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Calendar" />

    <style name="Calendar.HeaderDateText">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">#263238</item>
    </style>

    <style name="Calendar.CalendarViewStyle">
        <item name="dayHeight">40dp</item>
    </style>

    <style name="Calendar.ItemViewStyle">
        <item name="dayTextSize">12dp</item>
    </style>

    <style name="PlainText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#2E2E2E</item>
    </style>

    <style name="MainText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="HighlightText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#F44336</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>